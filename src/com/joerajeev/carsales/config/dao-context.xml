<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">


	<context:annotation-config></context:annotation-config>
	
	<!-- Scans the given package for components and makes them available in the container for wireing etc -->
	<context:component-scan base-package="com.joerajeev.carsales.dao"></context:component-scan>
	
	<!-- Looks up jndi resource by given name and creates a bean called dataSource -->
	<jee:jndi-lookup jndi-name="jdbc/carsalesdb" id="dataSource"></jee:jndi-lookup>
</beans>
